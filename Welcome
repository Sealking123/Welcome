  <script>
    // Clock and date
    function updateClock() {
      const clock = document.getElementById('clock');
      const dateLabel = document.getElementById('date-label');
      const now = new Date();
      let h = now.getHours();
      const m = now.getMinutes();
      const ampm = h >= 12 ? 'PM' : 'AM';
      h = h % 12;
      h = h ? h : 12;
      clock.innerText = `${h}:${m < 10 ? '0'+m : m} ${ampm}`;
      // Date formatting
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      let dateStr = now.toLocaleDateString(undefined, options).toUpperCase();
      dateLabel.innerText = dateStr;
    }
    setInterval(updateClock, 1000);
    updateClock();
    // Music click-to-play fallback
    document.body.addEventListener('click', () => {
      document.getElementById('bg-music').play();
    });
    // Weather - static for demo, can be replaced with live API
    document.getElementById('weather-temp').innerText = "80¬∞F";
  </script>
